        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Icon -->

    <!-- Greeting Text -->

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="228dp"
        android:layout_height="212dp"
